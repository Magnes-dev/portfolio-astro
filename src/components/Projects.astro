---
import ProjectCard from "./ProjectCard.astro";
import { projects } from "../lib/projects.d";

---

<section class="projects" id="projects">
  <div class="container">
    <div>
      <h1>Mis proyectos</h1>
      <h2>Estos son algunos de los proyectos en los que he estado trabajando</h2>
    </div>
    <div class="project-container">
      {
        projects.map((project) => {
          return <ProjectCard project={project} />
        })
      }      
    </div>
  </div>
</section>

<style>
  .container {
    width: fit-content;
    margin: auto;
  }

  .project-container {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 3rem;
    width: fit-content;
    margin: 3rem auto;
  }
</style>
