---
import { Image } from 'astro:assets';

interface Props {
  image: string;
  name: string;
  size?: "sm" | "lg";
}

const { image, name, size = "sm" } = Astro.props;
---

<div class={size === "lg" ? "pill large hover-scale-animation" : "pill small"}>
  <Image src={image} alt={`${name} logo`} width={35} height={35} loading="lazy" class="image" />
  <p>{name}</p>
</div>

<style>
  .pill {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    width: fit-content;
    border-radius: var(--button-border-radius);
  }
  
  .small {
    padding: 0.3rem 1rem;
    box-shadow: 0 0 5px var(--khaki-color);
    color: var(--ivory-color);

    & .image {
      max-width: 20px;
      max-height: 20px;
    }
  }

  .large {
    padding: 0.5rem 1.2rem;
    box-shadow: 0 0 5px var(--accent-color);
    background-color: var(--accent-color);
    color: var(--background-color);

    & img {
      max-width: 35px;
    }
  }
</style>
