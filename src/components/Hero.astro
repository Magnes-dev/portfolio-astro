---
import CodeIcon2 from "../svg/CodeIcon2.astro";
import ECommerceIcon from "../svg/ECommerceIcon.astro";
import FullStackIcon from "../svg/FullStackIcon.astro";
import Pill from "./Pill.astro";

---

<section class="hero">
  <div class="text-container">
    <h1>¡Hola! Me llamo <br/> Rubén Yáñez Aballe</h1>
    <h2>Soy desarrollador web full stack</h2>
    <div class="pill-container">
      <Pill text="Desarrollador web">
        <CodeIcon2 width="30px" height="30px" fill="var(--background-color)" />
      </Pill>
      <Pill text="Full Stack">
        <FullStackIcon width="30px" height="30px" fill="var(--background-color)" />
      </Pill>
      <Pill text="eCommerce">
        <ECommerceIcon width="30px" height="30px" fill="var(--background-color)" />
      </Pill>
    </div>
  </div>
  <div class="image-container hover-scale-animation">
    <img src="/assets/portrait.webp" />
  </div>
</section>

<style>
  .hero {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 2rem;
  }

  .text-container {
    max-width: 40%;
  }

  .image-container {
    width: 20%;
    height: 60vh;
    overflow: hidden;
    border-radius: var(--card-border-radius);

    & img {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }
  }

  .pill-container {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
  }
</style>
